<canvas></canvas>

<div class="content">
    <h1 id="test" class="pb-5">Home Page</h1>
    <div class="container">
        <div class="jumbo-transparent jumbotron py-0">
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    <h1 id="howToPlay" class="text-center">How to play</h1>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <img id="blob-image" src="/images/blobimg.jpg" alt="Map image">
                </div>
                <div class="col-md-6">
                    <span id="description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Reiciendis, quod sapiente quibusdam
                        ratione eveniet, nam ipsa asperiores neque nulla sunt harum. Temporibus, officia laboriosam
                        aperiam quisquam minima voluptates autem deleniti!</span>
                </div>
            </div>
            <div class="row pt-2 pb-1">
                <div class="col-md-6"></div>
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <form action="create-game">
                        <button id="play-game" class="btn btn-primary not-transparent">Play Game</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="jumbotron py-0">
            <h2>Leaderboard</h2>
            <ul>
                {{#each player}}
                <li>
                    <p>
                        User: {{this.name}}, Wins: {{this.wins}}, Losses: {{this.losses}}
                    </p>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>




<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://code.jquery.com/pep/0.4.3/pep.js"></script>
<script src="/js/index.js"></script>
<script src="/js/canvas.js"></script>
